  <script>
    const correctAnswers = {
      question1: 'c',  // Beyaz
      question2: 'b'   // M5
    };

    function checkAnswers() {
      const q1 = document.getElementById('question1').value;
      const q2 = document.getElementById('question2').value;
      const result = document.getElementById('result');
      const link = document.getElementById('link');

      if (!q1 || !q2) {
        result.textContent = 'LÃ¼tfen tÃ¼m sorularÄ± cevapla!';
        link.style.display = 'none';
        return;
      }

      if (q1 === correctAnswers.question1 && q2 === correctAnswers.question2) {
        result.textContent = 'Tebrikler! Mektubun kapÄ±sÄ± aÃ§Ä±ldÄ±. ðŸ’–';
        link.style.display = 'block';
      } else {
        result.textContent = 'BazÄ± cevaplar yanlÄ±ÅŸ, tekrar dene! ðŸ';
        link.style.display = 'none';
      }
    }

    window.onload = () => {
      const now = new Date();
      const unlockDate = new Date('2025-07-22T00:00:00');

      if (now >= unlockDate) {
        document.getElementById('quiz-container').style.display = 'block';
        document.getElementById('wait-message').style.display = 'none';
      } else {
        document.getElementById('quiz-container').style.display = 'none';
        document.getElementById('wait-message').style.display = 'block';
      }
    }
  </script>

